{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "standard": { "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s" }
  },
  "handlers": {
    "console": { "class": "logging.StreamHandler", "formatter": "standard", "level": "DEBUG" }
  },
  "loggers": {
    "uvicorn":       { "handlers": ["console"], "level": "DEBUG",   "propagate": false },
    "uvicorn.error": { "handlers": ["console"], "level": "DEBUG",   "propagate": false },
    "uvicorn.access":{ "handlers": ["console"], "level": "DEBUG",   "propagate": false }
  },
  "root": { "handlers": ["console"], "level": "DEBUG" }
}
