# Include important metadata files
include README.md
include LICENSE
include NOTICE
include py.typed
include requirements*.txt
include alembic.ini

# Include package data
recursive-include app *.py
recursive-include app *.json
recursive-include app *.yaml
recursive-include app *.yml
recursive-include app *.lark
recursive-include alembic *.py
recursive-include alembic *.mako
recursive-include templates *.html
recursive-include templates *.css
recursive-include templates *.js
recursive-include static *

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .pytest_cache
global-exclude *.egg-info
